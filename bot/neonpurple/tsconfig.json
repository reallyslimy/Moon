{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2022",
    "outDir": "dist",
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "importHelpers": true
  }
}
